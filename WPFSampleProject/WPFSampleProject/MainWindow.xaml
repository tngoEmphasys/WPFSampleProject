<Window x:Class="WPFSampleProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSampleProject"
        xmlns:control="clr-namespace:WPFSampleProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="375" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" HorizontalAlignment="Center">List of Employees</Label>
        <DataGrid Grid.Row="1" ItemsSource="{Binding}" AlternatingRowBackground="AliceBlue" VirtualizingStackPanel.IsVirtualizing="True" VirtualizingStackPanel.VirtualizationMode="Recycling"/>
        <control:MyCustomButton 
         Color="Crimson"
         x:Name = "customControl"  
         Width = "100" Height="20" Grid.Row="2" >
            <control:MyCustomButton.Template>
                <ControlTemplate>
                    <Button x:Name="MainButton" Content="Click Me">
                    </Button>
                </ControlTemplate>
            </control:MyCustomButton.Template>
        </control:MyCustomButton>
    </Grid>
</Window>
